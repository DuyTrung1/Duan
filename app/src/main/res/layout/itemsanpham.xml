<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgsanpham"
                android:layout_width="match_parent"
                android:layout_height="200dp"
               />

            <TextView
                android:id="@+id/tensanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Banking"
                android:textColor="#176CEE"
                android:fontFamily="@font/d"
                android:textSize="20dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/lightgray" />

            <TextView
                android:id="@+id/gia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8.050.000đ"
                android:textColor="#F00A0A"
                android:textSize="8dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/giamgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8.550.000đ"
                android:textSize="7dp"
                android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                Android:numStars="5"
                Android:stepSize="1.0" />
            <TextView
                android:layout_width="wrap_content"
                android:text="( 10  )"
                android:id="@+id/binhluan"
                android:textColor="#F50606"
                android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text=" /5"

        android:textColor="#F50606"
        android:layout_height="wrap_content"/>

</LinearLayout>
            <TextView
                android:id="@+id/diachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Hà Nội"
                android:textColor="@android:color/darker_gray"
                android:textSize="7dp" />

        </LinearLayout>
</LinearLayout>