<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:padding="10dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imglaptop"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/tenlaptop"
                android:layout_width="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="Iphone 5 plus"
                android:textColor="#050303"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/gialaptop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7.500.000đ"
                android:gravity="center"
                android:textColor="#F50202"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/khuyenmai"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Tặng PMH 300,000đ"
             />

            <TextView
                android:id="@+id/giamgialaptop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8.000.000đ"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="#0A0A0A"
                android:textStyle="bold" />



            <Button
                android:id="@+id/buttonmua"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textColor="#FFFDFD"
                android:background="@drawable/button"
                android:text="Mua Ngay >" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>