<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Register"
            android:textSize="30dp"
            android:textColor="#EE0707"
            android:layout_marginTop="130dp"/>
        <EditText
            android:background="@drawable/edttextuser"
            android:id="@+id/edtEmailRegister"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:hint="User"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="50dp"/>
        <EditText
            android:background="@drawable/edttextuser"
            android:id="@+id/edtUserBy"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:hint="User Mail Register"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginTop="40dp"/>
        <EditText
            android:paddingLeft="30dp"
            android:hint="Password"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/edtPasswordRegister"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@drawable/edttextuser"/>
        <EditText
            android:paddingLeft="30dp"
            android:hint="Confrim Password"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/edtConfirmPasswordRegister"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@drawable/edttextuser"/>
        <ImageView
            android:id="@+id/btnRegister1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:srcCompat="@drawable/btnreg"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
</LinearLayout>